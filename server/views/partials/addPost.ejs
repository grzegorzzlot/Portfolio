<form action="/admin/add-post" method="POST">
    <div class="form-group">
        <label for="post-title">Post Title</label>
        <input type="text" class="form-control" id="post-title" name="title" aria-describedby="emailHelp" placeholder="Post Title">
        <small id="emailHelp" class="form-text text-muted">Type title of your post</small>
    </div>
    <div class="form-group">
        <label>Kategoria</label>
        <input type="text" class="form-control" name="category" placeholder="Kategoria">
    </div>
    <div class="form-group"> 
        <label for="post-content">Post Content</label>
        <textarea id="post-content" class="form-control" name="content" placeholder="Post Content"></textarea>
    </div>

    <label>Thumbnail</label>
    <select name="thumbnail">
    <%mediaData.map((i,index)=>{%>
        <option value="<%=i.url%>"><%=i.name%></option>
    <%})%>
    </select>

    <label>Galeria</label>
    <select name="gallery" multiple>
    <%mediaData.map((i,index)=>{%>
        <option value="<%=i.url%>"><%=i.name%></option>
    <%})%>
    </select>

    <label>Technologie</label>
    <select name="technology" multiple>
    <%technologyData.map((i,index)=>{%>
        <option value="<%=i.title%>"><%=i.title%></option>
    <%})%>
    </select>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
